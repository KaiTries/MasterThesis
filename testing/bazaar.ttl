@prefix ex:     <http://example.com/> .
@prefix gr:     <http://purl.org/goodrelations/v1#> .
@prefix schema: <http://schema.org/> .
@prefix bspl:   <https://purl.org/bspl#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .

# --- Workspace / Business entity -------------------------------------------------------
ex:Bazaar a gr:BusinessEntity ;
  gr:legalName "Bazaar Ltd." ;
  gr:offers ex:RugOffer .

# --- GoodRelations Rug Offer -----------------------------------------------------------
ex:RugOffer a gr:Offering ;
  gr:hasBusinessFunction gr:Sell ;
  gr:includesObject ex:TypeAndQuantityNode_1 ;
  gr:hasPriceSpecification ex:Price1 ;
  schema:potentialAction ex:BuyAction .

ex:TypeAndQuantityNode_1
      a gr:TypeAndQuantityNode ;
      gr:amountOfThisGood "1.0"^^xsd:float ;
      gr:hasUnitOfMeasurement "C62"^^xsd:string ;
      gr:typeOfGood ex:Rug .

ex:Rug a gr:ProductOrService ;
  rdfs:label "Handmade rug" .

ex:Price1 a gr:UnitPriceSpecification ;
  gr:hasCurrency "EUR" ;
  gr:hasCurrencyValue "200.00"^^xsd:decimal ;
  gr:hasUnitOfMeasurement "C62"^^xsd:string .

# --- BSPL protocol (shortened) + link --------------------------------------------------
ex:Buy a bspl:Protocol ;
  bspl:hasRole ex:Buyer , ex:Seller ;
  bspl:hasMessage ex:Pay , ex:Give .

ex:BuyAction a schema:BuyAction ;
  bspl:usesProtocol ex:Buy ;
  schema:target [
    a schema:EntryPoint ;
    schema:urlTemplate "http://localhost:8005/interaction" ;
    schema:httpMethod "POST"
  ] .
